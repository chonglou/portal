    <bean id="memcachedClient" class="net.rubyeye.xmemcached.MemcachedClient" factory-bean="cache.clientBuilder" factory-method="build" destroy-method="shutdown"/>

    <bean id="cache.clientBuilder" class="net.rubyeye.xmemcached.XMemcachedClientBuilder">
        <constructor-arg value="${memcached.servers}"/>
        <property name="connectionPoolSize" value="${memcached.pool_size}"/>
        <property name="commandFactory">
            <bean class="net.rubyeye.xmemcached.command.BinaryCommandFactory"/>
        </property>
        <property name="sessionLocator">
            <bean class="net.rubyeye.xmemcached.impl.KetamaMemcachedSessionLocator"/>
        </property>
        <property name="transcoder">
            <bean class="net.rubyeye.xmemcached.transcoders.SerializingTranscoder" />
        </property>
    </bean>

